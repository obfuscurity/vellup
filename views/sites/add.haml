
%h1 Add Site

%form.form-stacked{ :class => "forceleft", :method => "post", :action => "/sites/add" }
  %fieldset
    .clearfix
      %label{ :for => "name" } Name
      .input
        %input{ :class => "xlarge", :id => "name", :name => "name" }
    .clearfix
      %label{ :for => "schema" } JSON Schema (User attributes):
      .input
        %textarea{ :class => "xlarge", :rows => 13, :id => "schema", :name => "schema" }

  .well
    %button{ :class => "btn primary", :type => "submit" } Add New Site
