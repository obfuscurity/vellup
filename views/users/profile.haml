
%h2 User Profile for #{profile[:username]} (Site: #{site})

%form.form-stacked{ :class => "forceleft", :method => "post" }
  %fieldset
    .clearfix
      %label{ :for => "firstname" } First Name: 
      .input
        %input{ :id => "firstname", :name => "firstname", :value => profile[:firstname] }
    .clearfix
      %label{ :for => "lastname" } Last Name:
      .input
        %input{ :id => "lastname", :name => "lastname", :value => profile[:lastname] }
    .clearfix
      %label{ :for => "password1" } Password
      .input
        %input{ :id => "password1", :type => "password", :name => "password1" }
    .clearfix
      %label{ :for => "password2" } Password (again)
      .input
        %input{ :id => "password2", :type => "password", :name => "password2" }
  .well
    %input{ :type => "hidden", :name => "_method", :value => "put" }
    %button{ :class => "btn primary", :type => "submit" } Update Profile
    %a{ :class => "btn danger", :href => "/sites/#{uuid}/users/#{profile[:id]}", :name => "_method", :value => "delete" } Destroy User
